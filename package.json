{
  "name": "meeting-plunger",
  "version": "1.0.0",
  "description": "Meeting Plunger - AI-powered meeting assistant",
  "private": true,
  "scripts": {
    "sut": "concurrently --names \"backend,frontend\" --prefix-colors \"blue,green\" \"pnpm sut:backend\" \"pnpm sut:frontend\"",
    "sut:backend": "cd backend && (test -f .venv/bin/uvicorn && .venv/bin/uvicorn main:app --reload || uvicorn main:app --reload)",
    "sut:frontend": "cd frontend && pnpm dev",
    "sut:local-service": "cd local-service && air",
    "e2e": "cd e2e && pnpm test",
    "e2e:headed": "cd e2e && pnpm test:headed",
    "e2e:debug": "cd e2e && pnpm test:debug",
    "e2e:install": "cd e2e && pnpm install",
    "test": "pnpm e2e",
    "test:local-service": "cd local-service && make test",
    "test:backend": "cd backend && pnpm test",
    "test:frontend": "cd frontend && pnpm test",
    "dev": "pnpm sut",
    "lint": "pnpm lint:local-service && pnpm lint:backend && pnpm lint:frontend && pnpm lint:e2e",
    "lint:local-service": "cd local-service && make lint",
    "lint:backend": "cd backend && pnpm lint",
    "lint:frontend": "cd frontend && pnpm lint",
    "lint:e2e": "cd e2e && pnpm lint",
    "format": "pnpm format:local-service && pnpm format:backend && pnpm format:frontend && pnpm format:e2e",
    "format:local-service": "cd local-service && make format",
    "format:backend": "cd backend && pnpm format",
    "format:frontend": "cd frontend && pnpm format",
    "format:e2e": "cd e2e && pnpm format",
    "generate:openapi": "scripts/generate-local-service-openapi.sh",
    "generate:api": "pnpm generate:openapi && cd frontend && pnpm generate:client && cd .. && scripts/generate-backend-openapi.sh && scripts/generate-backend-client.sh",
    "validate:api": "scripts/validate-api-generation.sh"
  },
  "keywords": [
    "meeting",
    "ai",
    "fastapi",
    "golang",
    "playwright",
    "e2e"
  ],
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}

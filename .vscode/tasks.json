{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start SUT (Backend + Client)",
      "type": "shell",
      "command": "pnpm sut",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "runOptions": {
        "instanceLimit": 1
      }
    },
    {
      "label": "Run E2E Tests",
      "type": "shell",
      "command": "pnpm e2e",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Run E2E Tests (Headed)",
      "type": "shell",
      "command": "pnpm e2e:headed",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "uvicorn main:app --reload",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Client",
      "type": "shell",
      "command": "go run . serve",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "pnpm install && pnpm e2e:install",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
